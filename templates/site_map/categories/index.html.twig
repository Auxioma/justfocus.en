<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    {# URL de la catégorie elle-même #}
    <url>
        <loc>{{ app.request.scheme ~ '://' ~ app.request.host ~ '/' ~ urlPath }}</loc>
        <lastmod>{{ 'now'|date('Y-m-d') }}</lastmod>
        <changefreq>weekly</changefreq>
        <priority>0.8</priority>
    </url>

    {# Boucler sur les articles associés à la catégorie #}
    {% for article in category.articles %}
        <url>
            <loc>{{ app.request.scheme ~ '://' ~ app.request.host ~ '/' ~ urlPath ~ '/' ~ article.slug ~ '.html' }}</loc>
            <lastmod>{{ article.getDate|date('Y-m-d') }}</lastmod>
            <changefreq>weekly</changefreq>
            <priority>0.6</priority>
        </url>
    {% endfor %}
</urlset>