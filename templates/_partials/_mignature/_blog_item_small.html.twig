{% import '_partials/_macro/_url_articles.html.twig' as macros %}

{% apply spaceless %}
    <div class="blog-style2">
        <div class="blog-img">
            <img src="{{ item.media|first.guid|default('images/default.webp') }}" alt="blog image" style="height:{{ maxHeight }}px; width:{{ width }}px" height="{{ maxHeight }} width="{{ width }}">
        </div>
        <div class="blog-content">
            <a data-theme-color="#FF9500" href="blog.html" class="category">
                {{ item.categories[0].name }}
            </a>
            <h3 class="box-title-18">
                {{ macros.truncate_title(item, 30) }}
            </h3>
            <div class="blog-meta">
                <a href=""><i class="fal fa-calendar-days"></i>{{ item.date|date('d M Y') }}</a>
            </div>
        </div>
    </div>
{% endapply %}
