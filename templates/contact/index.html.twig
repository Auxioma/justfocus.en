{% extends 'base.html.twig' %}

{% block title %}Hello ContactController!{% endblock %}

{% block body %}

	{% include '_partials/_mignature/_breadcumb.html.twig' with {'titre': 'Contact us'} %}

    <div class="space2">
        <div class="container">
            <div class="row">
                <div class="col-xl-5">
                    <div class="pe-xxl-4 me-xl-3 text-center text-xl-start mb-40 mb-lg-0">
                        <div class="title-area mb-32">
                            <h2 class="sec-title2">Contact Us.</h2>
                            <p class="sec-text">Please select one of the following forms to contact us so that we can respond to you as quickly as possible.</p>
                        </div>
                        <div class="contact-feature-wrap">
                            <div class="contact-feature">
                                <div class="box-icon">
                                    <img src="{{ asset('assets/img/icon/contact_1_1.svg') }}" alt="icon">
                                </div>
                                <div class="box-content">
                                    <h3 class="box-title-22">Our Address</h3>
                                    <p class="box-text">Kharkhiv </p>
                                </div>
                            </div>
                            <div class="contact-feature">
                                <div class="box-icon">
                                    <img src="{{ asset('assets/img/icon/contact_1_2.svg') }}" alt="icon">
                                </div>
                                <div class="box-content">
                                    <h3 class="box-title-22">Email Address</h3>
                                    <p class="box-text">
                                        <script type="text/javascript">
                                            // Encode email address
                                            var user = "partnair";
                                            var domain = "justfocus.info";
                                            document.write("<a href='mailto:" + user + "@" + domain + "'>" + user + "@" + domain + "</a>");
                                        </script>
                                    </p>
                                </div>
                            </div>
                            <div class="contact-feature">
                                <div class="box-icon">
                                    <img src="{{ asset('assets/img/icon/contact_1_3.svg') }}" alt="icon">
                                </div>
                                <div class="box-content">
                                    <h3 class="box-title-22">Phone Number</h3>
                                    <p class="box-text">
                                        <a href="tel:+380 96 681 6261">+380 96 681 6261</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-7">
                    <div class="quote-form-box">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}

                        <h4 class="form-title">Send Message</h4>
                        
                        {{ form_start(form, {'attr': {'class': 'contact-form'}}) }}

                            <div class="row">
                                <div class="form-group col-md-6">
                                    {{ form_row(form.Nom) }}
                                </div>
                                <div class="form-group col-md-6">
                                    {{ form_row(form.Email) }}
                                </div>
                                <div class="form-group col-md-12">
                                    {{ form_row(form.Sujet) }}
                                </div>
                                <div class="form-group col-12">
                                    {{ form_widget(form.Message) }}
                                </div>
                                <div class="form-btn col-12">
                                    <button class="th-btn" type="submit">Submit Now<i class="fas fa-arrow-up-right ms-2"></i></button>
                                </div>
                            </div>
                            <p class="form-messages mb-0 mt-3"></p>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div> <!--==============================
Contact Area  
==============================-->

{% endblock %}
