{% extends 'base.html.twig' %}

{% block title %}Just Focus{% endblock %}
{% block description %}Just Focus{% endblock %}
{% block keywords %}Just Focus{% endblock %}

{% block body %}
	<div class="breadcumb-wrapper">
        <div class="container">
            <ul class="breadcumb-menu">
                <li><a href="home-newspaper.html">Home</a></li>
                <li>Login.</li>
            </ul>
        </div>
    </div>
    <div class="space2">
        <div class="container">
            <div class="row">
                <div class="col-xl-6">
                    <div class="pe-xxl-4 me-xl-3 text-center text-xl-start mb-40 mb-lg-0">
                        <div class="title-area mb-32">
                            uuuuuuuu                        
                        </div>
                    </div>
                </div>
                <div class="col-xl-6">
                    <div class="quote-form-box">
                        <h4 class="form-title">Login</h4>
                        <form method="post" class="contact-form">
                            <div class="row">
                                <div class="form-group col-md-12">
                                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                                </div>
                                <div class="form-group col-md-12">
                                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                                </div>
                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" name="_remember_me"> Remember me
                                    </label>
                                </div> 
                                <div class="form-btn col-12">
                                    <button class="th-btn">Submit Now<i class="fas fa-arrow-up-right ms-2"></i></button>
                                </div>
                            </div>

                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
