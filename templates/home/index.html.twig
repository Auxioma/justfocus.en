                            <meta itemprop="headline" content="{{ item.title }}">
                            <meta itemprop="datePublished" content="{{ item.date|date('Y-m-d') }}">
                            <meta itemprop="author" content="{{ item.user.pseudo }}">
                            {{ include('_partials/_mignature/_blog_item.html.twig', { 'item': item, 'truncate': 120, 'maxHeight': 200 }) }}
                        </div>
                    {% endfor %}
                    {% endcache %}
                    
                    {% cache 'movies' %}
                    {% for item in movies|slice(0, 4) %}
                        <div itemscope itemtype="http://schema.org/NewsArticle">
                            <meta itemprop="headline" content="{{ item.title }}">
                            <meta itemprop="datePublished" content="{{ item.date|date('Y-m-d') }}">
                            <meta itemprop="author" content="{{ item.user.pseudo }}">
                            {{ include('_partials/_mignature/_blog_item.html.twig', { 'item': item, 'truncate': 120, 'maxHeight': 200 }) }}
                        </div>
                    {% endfor %}
                    {% endcache %}
                    
                    {% cache 'books' %}
                    {% for item in books|slice(0, 4) %}
                        <div itemscope itemtype="http://schema.org/NewsArticle">
                            <meta itemprop="headline" content="{{ item.title }}">
                            <meta itemprop="datePublished" content="{{ item.date|date('Y-m-d') }}">
                            <meta itemprop="author" content="{{ item.user.pseudo }}">
                            {{ include('_partials/_mignature/_blog_item.html.twig', { 'item': item, 'truncate': 120, 'maxHeight': 200 }) }}
                        </div>
                    {% endfor %}
                    {% endcache %}
                    
                    {% cache 'tvshows' %}
                    {% for item in tvshows|slice(0, 4) %}
