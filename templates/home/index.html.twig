    <div class="container">
        <div class="row">
            <div class="col-xl-8">
                <h2 class="sec-title has-line">JUSTFOCUS WEEKLY</h2>
                <div class="filter-active">
                    {% cache 'wanderlust' %}
                    {% for item in wanderlust|slice(0, 4) %}
