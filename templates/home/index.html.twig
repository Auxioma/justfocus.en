{% extends 'base.html.twig' %}

{% block title %}Just Focus{% endblock %}

{% block body %}
	<div>
		<div class="container">
			<div class="news-area">
				<div class="title">Breaking News :</div>
				<div class="news-wrap">
					<div class="row slick-marquee" itemscope itemtype="http://schema.org/ItemList">
						{% for news in breaking %}
							<div class="col-auto" itemprop="itemListElement" itemscope itemtype="http://schema.org/Article">
								<a href="blog-details.html" class="breaking-news" itemprop="url">
									<span itemprop="headline">{{ news.title }}</span>
								</a>
							</div>
						{% endfor %}
					</div>
				</div>
			</div>
		</div>
	</div>
	<section class="space">
		<div class="container">
			<div class="row">
				<div class="col-xl-3">
					<div class="row gy-4">
						{% for slide in slider[:2] %}
							<div class="col-xl-12 col-sm-6 border-blog">
								{% include '_partials/_mignature/_blog_item.html.twig' with { 'item': slide, 'truncate': 50, 'maxHeight': 187 } %}
							</div>
						{% endfor %}
					</div>
				</div>
				<div class="col-xl-6 mt-4 mt-xl-0">
					<div class="blog-style1 style-big">
						<div class="blog-img">
							<img src="{{ slider[2].media|first.guid }}" alt="{{ slider[2].media|first.title }}" style="max-height:490px">
							<a data-theme-color="#FF9500" href="blog.html" class="category">
								{{ slider[2].categories[0].name }}
							</a>
						</div>
						<h3 class="box-title-30">
							<a class="hover-line" href="blog-details.html">{{ slider[2].title|u.truncate(75) }}</a>
						</h3>
						<div class="blog-meta">
							<a href="author.html">
								<i class="far fa-user"></i>
								{{ slider[2].user.pseudo}}</a>
							<a href="blog.html">
								<i class="fal fa-calendar-days"></i>
								{{ slider[2].date|date('d M Y') }}</a>
						</div>
					</div>
				</div>
				<div class="col-xl-3 mt-35 mt-xl-0">
					<div class="nav tab-menu indicator-active" role="tablist">
						<button class="tab-btn active" id="nav-one-tab" data-bs-toggle="tab" data-bs-target="#nav-one" type="button" role="tab" aria-controls="nav-one" aria-selected="true">Top News</button>
