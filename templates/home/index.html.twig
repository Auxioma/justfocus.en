{% extends 'base.html.twig' %}

{% block title %}Just Focus{% endblock %}

{% block body %}
{% apply spaceless %}
<div>
    <div class="container">
        <div class="news-area">
            <div class="title">Breaking News :</div>
            <div class="news-wrap">
                <div class="row slick-marquee" itemscope itemtype="http://schema.org/ItemList">
                    {% cache 'breaking_news' %}
                    {% for item in breaking %}
                        {{ include('_partials/_mignature/_breaking_news_item.html.twig', { 'item': item }) }}
                    {% endfor %}
                    {% endcache %}
                </div>
            </div>
        </div>
    </div>
</div>

<section class="space">
    <div class="container">
        <div class="row">
            <div class="col-xl-3">
                <div class="row gy-4">
                    {% cache 'slider_first_two' %}
                    {% for item in slider|slice(0, 2) %}
                        <div class="col-xl-12 col-sm-6 border-blog">
                            {{ include('_partials/_mignature/_blog_item.html.twig', { 'item': item, 'truncate': 50, 'maxHeight': 187 }) }}
                        </div>
                    {% endfor %}
                    {% endcache %}
                </div>
            </div>
            <div class="col-xl-6 mt-4 mt-xl-0">
                {% set main_slider_item = slider[2] %}
                <div class="blog-style1 style-big">
                    <div class="blog-img">
                        <img src="{{ main_slider_item.media|first.guid }}" alt="{{ main_slider_item.media|first.title }}" style="max-height:490px">
                        <a data-theme-color="#FF9500" href="#" class="category">{{ main_slider_item.categories[0].name }}</a>
                    </div>
                    <h3 class="box-title-30">
                        <a class="hover-line" href="{{ path('app_articles', {
                            'slug': main_slider_item.slug,
                            'souscategorie': main_slider_item.categories[0].slug,
                            'categorie': main_slider_item.categories[0].parent ? main_slider_item.categories[0].parent.slug : 'no-category'
                        }) }}">{{ main_slider_item.title|u.truncate(75) }}</a>
                    </h3>
                    <div class="blog-meta">
                        <a href="author.html">
                            <i class="far fa-user"></i>{{ main_slider_item.user.pseudo }}</a>
                        <a href="blog.html">
                            <i class="fal fa-calendar-days"></i>{{ main_slider_item.date|date('d M Y') }}</a>
                    </div>
                </div>
            </div>
            <div class="col-xl-3 mt-35 mt-xl-0">
                <div class="nav tab-menu indicator-active" role="tablist">
                    <button class="tab-btn active" id="nav-one-tab" data-bs-toggle="tab" data-bs-target="#nav-one" type="button" role="tab" aria-controls="nav-one" aria-selected="true">Top News</button>
                    <button class="tab-btn" id="nav-two-tab" data-bs-toggle="tab" data-bs-target="#nav-two" type="button" role="tab" aria-controls="nav-two" aria-selected="false">Recent News</button>
                </div>
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="nav-one" role="tabpanel" aria-labelledby="nav-one-tab">
                        <div class="row gy-4">
                            {% cache 'top_news' %}
                            {% for item in breaking|slice(0, 3) %}
                                <div class="col-xl-12 col-md-6 border-blog" itemscope itemtype="http://schema.org/NewsArticle">
                                    <meta itemprop="headline" content="{{ item.title }}">
                                    <meta itemprop="datePublished" content="{{ item.date|date('Y-m-d') }}">
                                    <meta itemprop="author" content="{{ item.user.pseudo }}">
                                    {{ include('_partials/_mignature/_blog_item_small.html.twig', { 'item': item, 'truncate': 30, 'maxHeight': 100 }) }}
                                </div>
                            {% endfor %}
                            {% endcache %}
                        </div>
                    </div>
                    <div class="tab-pane fade" id="nav-two" role="tabpanel" aria-labelledby="nav-two-tab">
                        <div class="row gy-4">
                            {% cache 'recent_news' %}
                            {% for item in slider|slice(0, 3) %}
                                <div class="col-xl-12 col-md-6 border-blog" itemscope itemtype="http://schema.org/NewsArticle">
                                    <meta itemprop="headline" content="{{ item.title }}">
                                    <meta itemprop="datePublished" content="{{ item.date|date('Y-m-d') }}">
                                    <meta itemprop="author" content="{{ item.user.pseudo }}">
                                    {{ include('_partials/_mignature/_blog_item_small.html.twig', { 'item': item, 'truncate': 30, 'maxHeight': 100 }) }}
                                </div>
                            {% endfor %}
                            {% endcache %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="space">
    <div class="container">
        <div class="row align-items-center">
            <div class="col">
                <h2 class="sec-title has-line">Cinema</h2>
            </div>
            <div class="col-auto">
                <div class="sec-btn">
                    <div class="icon-box">
                        <button data-slick-prev="#cinema-slide" class="slick-arrow default">
                            <i class="far fa-arrow-left"></i>
                        </button>
                        <button data-slick-next="#cinema-slide" class="slick-arrow default">
                            <i class="far fa-arrow-right"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row th-carousel" id="cinema-slide" data-slide-show="4" data-lg-slide-show="3" data-md-slide-show="2" data-sm-slide-show="2">
            {% cache 'cinema' %}
            {% for item in cinema %}
                <div class="col-sm-6 col-xl-4" itemscope itemtype="http://schema.org/NewsArticle">
                    <meta itemprop="headline" content="{{ item.title }}">
                    <meta itemprop="datePublished" content="{{ item.date|date('Y-m-d') }}">
                    <meta itemprop="author" content="{{ item.user.pseudo }}">
                    {{ include('_partials/_mignature/_blog_item.html.twig', { 'item': item, 'truncate': 35, 'maxHeight': 187 }) }}
                </div>
            {% endfor %}
            {% endcache %}
        </div>
    </div>
</section>

