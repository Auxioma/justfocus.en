        <!-- <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-8024639635671805" crossorigin="anonymous"></script> -->
        <script>
            $(document).ready(function() {
                // Vérifier si l'utilisateur a déjà choisi de ne plus voir le popup
                if (localStorage.getItem('popupClosed') === 'true') {
                    $('.popup-subscribe-area').hide(); // Cacher le popup si déjà fermé
                }

                // Lorsque l'utilisateur clique sur la checkbox
                $('#destroyPopup').change(function() {
                    if (this.checked) {
                        localStorage.setItem('popupClosed', 'true'); // Enregistrer dans le localStorage
                        $('.popup-subscribe-area').fadeOut(); // Cacher le popup
                    } else {
                        localStorage.setItem('popupClosed', 'false'); // Réinitialiser si décoché
                    }
                });

                // Fermer le popup lorsque l'utilisateur clique sur le bouton de fermeture
                $('.popupClose').click(function() {
                    $('.popup-subscribe-area').fadeOut();
                });
            });
        </script>
